@using newportal.Models.ViewModel
@using newportal.Models.ViewModel.Auth
@model ChangePassword_VM

<div class="card shadow-sm rounded-4 border-0">
    <div class="card-header bg-transparent border-0 px-4 pt-4">
        <h5 class="mb-0 text-primary fw-semibold">
            <i class="bi bi-shield-lock-fill me-2"></i> Change Password
        </h5>
    </div>
    <div class="card-body px-4 pb-4 pt-2">

        @if (TempData["StatusMessage"] != null)
        {
            <div class="alert alert-success mb-4 shadow-sm">@TempData["StatusMessage"]</div>
        }

        <form asp-controller="Setting" asp-action="ChangePassword" method="post">
            <div class="mb-3">
                <label asp-for="OldPassword" class="form-label fw-medium">Current Password</label>
                <div class="input-group">
                    <input asp-for="OldPassword" class="form-control" type="password" id="oldPwd" />
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleVisibility('oldPwd', this)">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="OldPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label fw-medium">New Password</label>
                <div class="input-group">
                    <input asp-for="NewPassword" class="form-control" type="password" id="newPwd" />
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleVisibility('newPwd', this)">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-medium">Confirm Password</label>
                <div class="input-group">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" id="confirmPwd" />
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleVisibility('confirmPwd', this)">
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3 shadow-sm">
                <i class="bi bi-key me-1"></i> Update Password
            </button>
        </form>
    </div>
</div>

<style>
    .form-label {
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-outline-secondary {
        border-radius: 0 0.5rem 0.5rem 0;
    }

    .btn-primary {
        font-weight: 600;
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    <script>
        function toggleVisibility(inputId, button) {
            const input = document.getElementById(inputId);
            const icon = button.querySelector('i');
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        }
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
