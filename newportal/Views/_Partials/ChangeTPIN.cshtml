@using newportal.Models.ViewModel
@using newportal.Models.ViewModel.Auth
@model ChangeTPIN_VM

<div class="card shadow-sm rounded-4 border-0">
    <div class="card-header bg-transparent border-0 px-4 pt-4">
        <h5 class="mb-0 text-primary fw-semibold">
            <i class="bi bi-lock-fill me-2"></i> Change TPIN
        </h5>
    </div>
    <div class="card-body px-4 pb-4 pt-2">

        @if (TempData["StatusMessage"] != null)
        {
            <div class="alert alert-success mb-4 shadow-sm">@TempData["StatusMessage"]</div>
        }

        <form asp-controller="Setting" asp-action="ChangeTPIN" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label for="otpInput" class="form-label fw-medium">OTP</label>
                <div class="input-group">
                    <input asp-for="OTP" id="otpInput" class="form-control" disabled />
                    <button type="button" class="btn btn-outline-primary" id="sendOtpBtn" >
                        Send OTP
                    </button>
                </div>
                <span asp-validation-for="OTP" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NewTPIN" class="form-label fw-medium">New TPIN</label>
                <div class="input-group">
                    <input asp-for="NewTPIN" class="form-control" type="password" id="newTpin" disabled />
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleVisibility('newTpin', this)" disabled>
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="NewTPIN" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmTPIN" class="form-label fw-medium">Confirm TPIN</label>
                <div class="input-group">
                    <input asp-for="ConfirmTPIN" class="form-control" type="password" id="confirmTpin" disabled />
                    <button type="button" class="btn btn-outline-secondary" onclick="toggleVisibility('confirmTpin', this)" disabled>
                        <i class="bi bi-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmTPIN" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-3 shadow-sm" id="updateBtn" disabled>
                <i class="bi bi-lock me-1"></i> Update TPIN
            </button>
        </form>
    </div>
</div>

<style>
    .form-label {
        color: #333;
    }

    .form-control {
        border-radius: 0.5rem;
    }

    .btn-outline-secondary {
        border-radius: 0 0.5rem 0.5rem 0;
    }

    .btn-primary {
        font-weight: 600;
        border-radius: 0.5rem;
    }
</style>


@section Scripts {


    @await Html.PartialAsync("_ValidationScriptsPartial")
}
