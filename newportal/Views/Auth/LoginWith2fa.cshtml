@using Newtonsoft.Json
@using newportal.Models.ViewModel
@using newportal.Models.ViewModel.Auth
@model Otp_VM

@{
    ViewData["Title"] = "OTP Verification";
    var modelJson = TempData["Otptrans"]?.ToString();
    var inputo = !string.IsNullOrEmpty(modelJson)
        ? JsonConvert.DeserializeObject<Otp_VM>(modelJson)
        : null;
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <div class="card px-sm-6 px-0">
                <div class="card-body">
                    <div class="app-brand justify-content-center mb-4">
                        <a href="/" class="app-brand-link gap-2">
                            <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
                            <span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
                        </a>
                    </div>

                    <h4 class="mb-1">Verify Your Email</h4>
                    <p class="mb-4">We have sent an OTP to your registered email. Please enter it below to continue.</p>

                    <form method="POST" asp-action="LoginWith2fa" asp-controller="Auth">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Hidden fields for RememberMe and ReturnUrl -->
                        <input type="hidden" asp-for="auth.RememberMe" value="@inputo.auth.RememberMe"/>

                        <input type="hidden" asp-for="auth.Username" value="@inputo.auth.Username" />
                        <input type="hidden" asp-for="auth.Password" value="@inputo.auth.Password" />

                        <div class="mb-4">
                            <label asp-for="InputOtp" class="form-label">Enter OTP</label>
                            <input asp-for="InputOtp" class="form-control" autocomplete="one-time-code" placeholder="123456" />
                            <span asp-validation-for="InputOtp" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input asp-for="RememberMachine" class="form-check-input" />
                            <label asp-for="RememberMachine" class="form-check-label">
                                @Html.DisplayNameFor(m => m.RememberMachine)
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary d-grid w-100">Verify OTP</button>
                    </form>

                    <div class="text-center mt-3">
                        <p>Didn't receive the OTP? <a asp-action="ResendOtp" asp-controller="Auth">Resend</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
