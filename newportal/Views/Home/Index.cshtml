@{
    ViewData["Title"] = "Welcome to MobiPay";
    Layout = "_Layout";
}

<!-- Bootstrap & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">

<style>
    :root {
        --primary: #696CFF;
        --secondary: #FF6B6B;
        --dark: #2b2b2b;
        --light: #f5f8ff;
        --gray: #666;
        --card-bg: #ffffff;
    }

    body {
        font-family: 'Segoe UI', sans-serif;
        color: #2b2b2b;
        overflow-x: hidden;
        margin: 0;
        padding: 0;
    }

   

    

    /* Hero Section */
    .hero-section {
        background: linear-gradient(135deg, #f5f8ff 0%, #ffffff 100%);
        padding: 80px 0 60px;
        position: relative;
        overflow: hidden;
    }

    .hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 1.5rem;
    }

    .hero-highlight {
        color: var(--primary);
        position: relative;
    }

    .hero-subtitle {
        font-size: 1.25rem;
        color: var(--gray);
        max-width: 600px;
        margin: 0 auto 2.5rem;
    }

    .btn-cta {
        background-color: var(--primary);
        color: #fff;
        padding: 0.85rem 2rem;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-cta:hover {
            background-color: #5a5de0;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(105, 108, 255, 0.3);
            color: #fff;
        }

    .hero-shape {
        position: absolute;
        width: 600px;
        height: 600px;
        border-radius: 50%;
        background: linear-gradient(135deg, rgba(105, 108, 255, 0.1) 0%, rgba(105, 108, 255, 0.03) 100%);
        z-index: 1;
    }

    .shape-1 {
        top: -300px;
        right: -200px;
    }

    .shape-2 {
        bottom: -300px;
        left: -200px;
    }

    /* Services */
    .services-section {
        padding: 100px 0;
        background-color: #fff;
        position: relative;
        z-index: 1;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        color: var(--dark);
    }

    .section-subtitle {
        text-align: center;
        font-size: 1.25rem;
        color: var(--gray);
        max-width: 700px;
        margin: 0 auto 4rem;
    }

    .service-card {
        background: var(--card-bg);
        border-radius: 16px;
        padding: 40px 30px;
        height: 100%;
        box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
        border: 1px solid rgba(105, 108, 255, 0.1);
        transition: all 0.3s ease;
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(105, 108, 255, 0.15);
            border-color: rgba(105, 108, 255, 0.2);
        }

    .service-icon {
        width: 70px;
        height: 70px;
        background: rgba(105, 108, 255, 0.1);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 25px;
        color: var(--primary);
        font-size: 2rem;
    }

    .service-title {
        font-size: 1.5rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: var(--dark);
    }

    .service-text {
        color: var(--gray);
        margin-bottom: 25px;
    }

    .service-link {
        color: var(--primary);
        font-weight: 600;
        text-decoration: none;
        display: flex;
        align-items: center;
    }

        .service-link i {
            margin-left: 8px;
            transition: transform 0.3s ease;
        }

        .service-link:hover i {
            transform: translateX(5px);
        }

    /* Trusted Partners - Auto Scroll */
    .trusted-section {
        padding: 80px 0;
        background-color: var(--light);
        position: relative;
        z-index: 1;
        overflow: hidden;
    }

    .scroll-container {
        overflow: hidden;
        white-space: nowrap;
        position: relative;
        margin-top: 40px;
        padding: 20px 0;
    }

    .scroll-content {
        display: inline-flex;
        animation: scroll 20s linear infinite;
        align-items: center;
    }

    .trusted-logo {
        height: 80px;
        width: auto;
        margin: 0 40px;
        filter: grayscale(100%) opacity(0.7);
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

        .trusted-logo:hover {
            filter: grayscale(0%) opacity(1);
            transform: scale(1.1);
        }

    @@keyframes scroll {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(-50%);
        }
    }

    /* Pause animation on hover */
    .scroll-container:hover .scroll-content {
        animation-play-state: paused;
    }

    /* Features */
    .features-section {
        padding: 100px 0;
        background-color: #fff;
        position: relative;
        z-index: 1;
    }

    .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 50px;
    }

    .feature-card {
        background: var(--card-bg);
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.03);
        border: 1px solid rgba(105, 108, 255, 0.05);
        transition: all 0.3s ease;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(105, 108, 255, 0.1);
        }

    .feature-icon {
        width: 60px;
        height: 60px;
        background: rgba(105, 108, 255, 0.1);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        color: var(--primary);
        font-size: 1.8rem;
    }

    .feature-title {
        font-size: 1.3rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: var(--dark);
    }

    .feature-text {
        color: var(--gray);
        font-size: 0.95rem;
    }

    /* CTA Section */
    .cta-section {
        padding: 100px 0;
        background: linear-gradient(135deg, var(--primary) 0%, #5a5de0 100%);
        color: #fff;
        text-align: center;
        position: relative;
        overflow: hidden;
        z-index: 1;
    }

    .cta-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1.5rem;
        position: relative;
        z-index: 2;
    }

    .cta-text {
        font-size: 1.2rem;
        max-width: 700px;
        margin: 0 auto 2.5rem;
        position: relative;
        z-index: 2;
        opacity: 0.9;
    }

    .btn-cta-light {
        background-color: #fff;
        color: var(--primary);
        padding: 0.85rem 2.5rem;
        font-weight: 600;
        border-radius: 8px;
        border: none;
        transition: all 0.3s ease;
        position: relative;
        z-index: 2;
        text-decoration: none;
        display: inline-block;
    }

        .btn-cta-light:hover {
            background-color: #f8f8f8;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            color: var(--primary);
        }

    .cta-shape {
        position: absolute;
        width: 400px;
        height: 400px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.05);
        z-index: 1;
    }

    .cta-shape-1 {
        top: -150px;
        left: -150px;
    }

    .cta-shape-2 {
        bottom: -150px;
        right: -150px;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .carousel-title {
            font-size: 2rem;
        }

        .carousel-text {
            font-size: 1.1rem;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .trusted-logo {
            height: 60px;
            margin: 0 20px;
        }
    }
</style>

