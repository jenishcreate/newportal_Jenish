@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .page-wrapper {
        padding: 1.5rem;
    }

    .service-link {
        transition: 0.3s ease all;
        border: 2px solid transparent;
        border-radius: 0.75rem;
    }

        .service-link:hover {
            transform: scale(1.04);
            border-color: #696CFF;
            background-color: #f6f9ff;
            z-index: 2;
        }

        .service-link.selected {
            border-color: #696CFF;
            background-color: #f0f4ff;
        }

    .section-title {
        font-weight: 600;
        font-size: 1.125rem;
        margin-top: 2.5rem;
        margin-bottom: 1rem;
        border-left: 4px solid #696CFF;
        padding-left: 0.75rem;
        color: #4b4b4b;
    }

    .summary-card {
        border-radius: 0.75rem;
        min-height: 130px;
        padding: 1.25rem;
    }

    #balance {
        font-size: 1.75rem;
        font-weight: 700;
        color: #696CFF;
    }

    #balance-wrapper {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    #refreshIcon {
        cursor: pointer;
        font-size: 1.4rem;
        color: #6c757d;
        transition: transform 0.2s ease;
    }

        #refreshIcon:hover {
            color: #696CFF;
            transform: rotate(180deg);
        }
</style>

<div class="container-fluid page-wrapper">
    <h4 class="fw-bold mb-4">Dashboard</h4>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="mb-1">Hi, Admin</h5>
            <p class="text-muted mb-0">Overview of platform</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row g-3 mb-4">
        <!-- Total Balance Card -->
        <div class="col-md-6 col-lg-4">
            <div class="card summary-card shadow-sm">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="mb-1 ">Total Balance In System</h5>
                        <div id="balance-wrapper">
                            <p id="balance" class="mb-0"> Loading...</p>
                            <i id="refreshIcon" class="bx bx-refresh"></i>
                        </div>
                    </div>
                    <div class="fs-2">💰</div>
                </div>
            </div>
        </div>

        <!-- Placeholder for Today’s Volume -->
        <div class="col-md-6 col-lg-4">
            <div class="card summary-card shadow-sm">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <h6 class="mb-1 text-muted">Today’s Volume</h6>
                        <p class="fw-bold text-dark fs-5 mb-2">₹89,000.00</p>
                        <button class="btn btn-sm btn-outline-secondary">See Transactions</button>
                    </div>
                    <div class="fs-2">📊</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Credit card Services -->
    <div class="section-title">Credit-Card Bill</div>
    <div class="row g-3">
        <div class="col-6 col-md-4 col-xl-2">
            <a asp-controller="CreditCardLite" asp-action="Index" class="card text-center p-3 shadow-sm h-100 text-decoration-none text-dark service-link">
                <div class="fs-3">💳</div>
                <div class="fw-semibold mt-2">Credit Card Bill</div>
            </a>
        </div>
        <div class="col-6 col-md-4 col-xl-2">
            <a asp-controller="CreditCardBBPS" asp-action="Index" class="card text-center p-3 shadow-sm h-100 text-decoration-none text-dark service-link">
                <div class="fs-3">💳</div>
                <div class="fw-semibold mt-2">Credit Card (BBPS)</div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <script>
        function loadBalance() {
            $.ajax({
                url: '/Admin/Dashboard/TotalBalance',
                method: 'GET',
                success: function (response) {
                    if (response && response.balance !== undefined) {
                        $('#balance').text("₹ " + response.balance.toFixed(2));
                    } else {
                        $('#balance').text("₹0.00");
                    }
                },
                error: function () {
                    $('#balance').text('Error loading balance');
                }
            });
        }

        $(document).ready(function () {
            loadBalance();

            $('#refreshIcon').on('click', function () {
                loadBalance();
            });

            $('.service-link').click(function () {
                $('.service-link').removeClass('selected');
                $(this).addClass('selected');
            });
        });
    </script>
}
