@section Scripts {
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <script>
        function loadBalance() {
            $.ajax({
                url: '/Distributor/Dashboard/GetDistributorBalance',
                method: 'GET',
                success: function (response) {
                    if (response && response.balance !== undefined) {
                        $('#balance').text(response.balance.toFixed(2));
                    } else {
                        $('#balance').text('0.00');
                    }
                },
                error: function () {
                    $('#balance').text('0.00');
                }
            });
        }

        function loadUserInfo() {
            $.ajax({
                url: '/Distributor/Dashboard/GetUserInfo',
                method: 'GET',
                success: function (response) {
                    if (response) {
                        if (response.userName) {
                            $('#userName').text('Hi, ' + response.userName);
                        } else {
                            $('#userName').text('Hi, Distributor');
                        }

                        if (response.companyName) {
                            $('#companyName').text(response.companyName);
                        } else {
                            $('#companyName').text('Distributor Network');
                        }
                    }
                },
                error: function () {
                    $('#userName').text('Hi, Distributor');
                    $('#companyName').text('Distributor Network');
                }
            });
        }

        $(document).ready(function () {
            loadBalance();
            loadUserInfo();

            $('#refreshIcon').on('click', function () {
                $(this).addClass('loading');
                setTimeout(() => {
                    $(this).removeClass('loading');
                }, 800);
                loadBalance();
            });

            $('.management-card, .stat-card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
                    $(this).removeClass('shadow-lg');
                }
            );
        });
    </script>
