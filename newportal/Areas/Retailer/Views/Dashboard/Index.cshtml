            z-index: -1;
        }

        .promo-card:hover {
            transform: translateY(-4px);
            text-decoration: none;
            color: #2d3748;
            box-shadow: 0 8px 25px rgba(105, 108, 255, 0.15);
        }

            .promo-card:hover::before {
                opacity: 1;
            }

        .promo-card h4 {
            font-weight: 600;
            margin-bottom: 1rem;
            color: #1a202c;
            font-size: 1.125rem;
            transition: color 0.3s ease;
        }

        .promo-card:hover h4 {
            color: var(--primary-color);
        }

    .promo-features {
        list-style: none;
        padding: 0;
        margin: 0;
    }

        .promo-features li {
            padding: 0.25rem 0;
            font-size: 0.875rem;
            color: #718096;
            font-weight: 400;
            transition: color 0.3s ease;
        }

    .promo-card:hover .promo-features li {
        color: #4a5568;
    }

    .promo-features li::before {
        content: '→';
        margin-right: 0.5rem;
        color: var(--primary-color);
        font-weight: normal;
        transition: all 0.3s ease;
    }

    .promo-card:hover .promo-features li::before {
        transform: translateX(3px);
        color: var(--primary-color);
        filter: brightness(1.2);
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .balance-section {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        background: #f7fafc;
        border: 1px solid #e2e8f0;
        border-radius: 0.75rem;
        padding: 1.25rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        color: #2d3748;
        font-size: 0.875rem;
        min-width: 200px;
    }

    .balance-amount {
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--primary-color);
    }

    .refresh-btn {
        background: none;
        border: none;
        color: #718096;
        cursor: pointer;
        padding: 0.375rem;
        border-radius: 0.375rem;
        transition: all 0.2s;
    }

        .refresh-btn:hover {
            background: var(--primary-light);
            color: var(--primary-color);
        }

    .footer-section {
        margin-top: 2.5rem;
        padding: 1.5rem 0;
        border-top: 1px solid #e2e8f0;
        text-align: center;
        color: #718096;
        font-size: 0.875rem;
        font-weight: 400;
    }

    .company-name {
        font-size: 0.875rem;
        color: #718096;
        margin-top: 0.5rem;
        font-style: italic;
    }

    /* Media Queries */
    @@media (max-width: 768px) {
        .featured-services {
            grid-template-columns: repeat(2, 1fr);
        }

        .services-grid {
            grid-template-columns: repeat(3, 1fr);
        }

        .service-card {
            padding: 1rem 0.5rem;
        }

        .service-icon {
            font-size: 2rem;
        }

        .service-card h6 {
            font-size: 0.8rem;
        }
    }

    /* Loading animation for refresh button */
    .refresh-btn.loading {
        animation: spin 0.6s linear infinite;
    }

    /* Keyframes animations - escaped with @@ for Razor */
    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }

        to {
            transform: rotate(360deg);
        }
    }

    /* Pulse animation for new badges */
    .featured-card.new::after,
    .service-card.new::after {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }

        100% {
            opacity: 1;
        }
    }
</style>

