@section Scripts {
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />

    <script>
        function loadBalance() {
            $.ajax({
                url: '/Retailer/Dashboard/GetBalance',
                method: 'GET',
                success: function (response) {
                    if (response && response.balance !== undefined) {
                        $('#balance').text(response.balance.toFixed(2));
                    } else {
                        $('#balance').text('0.34');
                    }
                },
                error: function () {
                    $('#balance').text('0.34');
                }
            });
        }

        function loadUserInfo() {
            $.ajax({
                url: '/Retailer/Dashboard/GetUserInfo',
                method: 'GET',
                success: function (response) {
                    if (response) {
                        if (response.userName) {
                            $('#userName').text('Hello, ' + response.userName);
                        } else {
                            $('#userName').text('Hi, User');
                        }

                        if (response.companyName) {
                            $('#companyName').text(response.companyName);
                        } else {
                            $('#companyName').text('Company Name Not Available');
                        }
                    }
                },
                error: function () {
                    $('#userName').text('Hi, User');
                    $('#companyName').text('Company Name Not Available');
                }
            });
        }

        $(document).ready(function () {
            loadBalance();
            loadUserInfo();

            $('#refreshIcon').on('click', function () {
                $(this).addClass('loading');
                setTimeout(() => {
                    $(this).removeClass('loading');
                }, 800);
                loadBalance();
            });

            $('.service-card, .featured-card, .promo-card').hover(
                function() {
                    $(this).addClass('shadow-lg');
                },
                function() {
